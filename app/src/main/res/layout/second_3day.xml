<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/day3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@id/day2">

        <TextView
            android:id="@+id/day3_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="星期四"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/day3_weather"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_below="@id/day3_week"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:src="@drawable/biz_plugin_weather_0_50"/>
        <TextView
            android:id="@+id/day3_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day3_weather"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:text="-2℃～7℃"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/day3_weatherTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day3_temperature"
            android:layout_centerHorizontal="true"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/day3_fengli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day3_weatherTv"
            android:layout_centerHorizontal="true"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/day4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@id/day3">

        <TextView
            android:id="@+id/day4_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="星期五"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/day4_weather"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_below="@id/day4_week"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:src="@drawable/biz_plugin_weather_0_50"/>
        <TextView
            android:id="@+id/day4_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day4_weather"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:text="-2℃～7℃"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/day4_weatherTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day4_temperature"
            android:layout_centerHorizontal="true"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/day4_fengli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day4_weatherTv"
            android:layout_centerHorizontal="true"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/day5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@id/day4">

        <TextView
            android:id="@+id/day5_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="星期六"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/day5_weather"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="11dp"
            android:src="@drawable/biz_plugin_weather_0_50"
            android:layout_below="@+id/day5_week"
            android:layout_alignRight="@+id/day5_week"
            android:layout_alignEnd="@+id/day5_week" />
        <TextView
            android:id="@+id/day5_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day5_weather"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:text="-2℃～7℃"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/day5_weatherTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day5_temperature"
            android:layout_centerHorizontal="true"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/day5_fengli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day5_weatherTv"
            android:layout_centerHorizontal="true"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>
